{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Angular campaign CRUD",
    "type": "object",
    "properties": {
      "name": {
        "type": "number"
      },
      "keywords": {
        "description": "List of typeahead keywords",
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "bid_amount": {
        "description": "Minimum amount",
        "type": "number"
      },
      "fund": {
        "description": "Dynamically updated balance of a user",
        "type": "number"
      },
      "status": {
        "type": "boolean"
      },
      "town": {
        "description": "Picked from a dropdown list",
        "type": "string"
      },
      "radius": {
        "description": "Radius in kilometers",
        "type": "number"
      }
    },
    "required": [
      "name",
      "keywords",
      "bid_amount",
      "fund",
      "status",
      "radius"
    ]
  }